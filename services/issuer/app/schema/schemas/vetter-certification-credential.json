{
  "$id": "EOefmhWU2qTpMiEQhXohE6z3xRXkpLloZdhTYIenlD4H",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vetter Certification Credential",
  "description": "Certifies a vetter's authority to issue credentials for specific geographic regions. Per the VVP Multichannel Vetters spec, this credential defines ECC Targets (E.164 country codes) and Jurisdiction Targets (ISO 3166-1 alpha-3 codes) that constrain which credentials the vetter can issue.",
  "type": "object",
  "credentialType": "VetterCertificationCredential",
  "version": "1.0.0",
  "required": [
    "v",
    "d",
    "u",
    "i",
    "ri",
    "s",
    "a"
  ],
  "properties": {
    "v": {
      "description": "Version",
      "type": "string"
    },
    "d": {
      "description": "Credential SAID",
      "type": "string"
    },
    "u": {
      "description": "A salty nonce",
      "type": "string"
    },
    "i": {
      "description": "Issuer AID (e.g., GSMA or certification authority)",
      "type": "string"
    },
    "ri": {
      "description": "Credential status registry",
      "type": "string"
    },
    "s": {
      "description": "Schema SAID",
      "type": "string"
    },
    "a": {
      "oneOf": [
        {
          "description": "Attributes block SAID",
          "type": "string"
        },
        {
          "$id": "",
          "description": "Attributes block",
          "type": "object",
          "required": [
            "d",
            "u",
            "i",
            "dt",
            "ecc_targets",
            "jurisdiction_targets"
          ],
          "properties": {
            "d": {
              "description": "Attributes block SAID",
              "type": "string"
            },
            "u": {
              "description": "A salty nonce",
              "type": "string"
            },
            "i": {
              "description": "Certified vetter AID (issuee)",
              "type": "string"
            },
            "dt": {
              "description": "Issuance date time",
              "format": "date-time",
              "type": "string"
            },
            "ecc_targets": {
              "description": "List of E.164 country codes for which the vetter is certified to attest telephone number right-to-use",
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "description": "E.164 country code (1-3 digits)",
                "pattern": "^[0-9]{1,3}$"
              }
            },
            "jurisdiction_targets": {
              "description": "List of ISO 3166-1 alpha-3 country codes for which the vetter is certified to attest incorporation, legal correctness, and brand licensure",
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "description": "ISO 3166-1 alpha-3 country code (e.g., GBR, USA, FRA)",
                "pattern": "^[A-Z]{3}$"
              }
            },
            "name": {
              "description": "Human-readable name of the certified vetter organization",
              "type": "string"
            },
            "certificationExpiry": {
              "description": "Expiration date of the certification",
              "format": "date-time",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "e": {
      "oneOf": [
        {
          "description": "Edges block SAID",
          "type": "string"
        },
        {
          "$id": "",
          "description": "Edges block",
          "type": "object",
          "properties": {
            "d": {
              "description": "Edges block SAID",
              "type": "string"
            },
            "issuer": {
              "description": "Edge to credential proving identity of the certification issuer (e.g., GSMA vLEI)",
              "type": "object",
              "properties": {
                "n": {
                  "description": "SAID of issuer identity credential",
                  "type": "string"
                },
                "s": {
                  "description": "SAID of issuer identity schema",
                  "type": "string"
                },
                "o": {
                  "description": "Operator",
                  "type": "string",
                  "const": "I2I"
                }
              },
              "additionalProperties": false,
              "required": [
                "n",
                "s",
                "o"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "d"
          ]
        }
      ]
    },
    "r": {
      "oneOf": [
        {
          "description": "Rules section SAID",
          "type": "string"
        },
        {
          "$id": "",
          "description": "Rules detail",
          "type": "object",
          "required": [
            "d",
            "certificationTerms"
          ],
          "properties": {
            "d": {
              "description": "Rule section SAID",
              "type": "string"
            },
            "certificationTerms": {
              "description": "Certification terms and conditions",
              "oneOf": [
                {
                  "description": "Compact rule form",
                  "type": "string",
                  "const": "The certified vetter agrees to only issue credentials within the geographic and jurisdictional constraints specified in this certification."
                },
                {
                  "description": "Rule detail",
                  "type": "object",
                  "properties": {
                    "l": {
                      "description": "Associated legal language",
                      "type": "string",
                      "const": "The certified vetter agrees to only issue credentials within the geographic and jurisdictional constraints specified in this certification."
                    }
                  },
                  "required": [
                    "l"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}